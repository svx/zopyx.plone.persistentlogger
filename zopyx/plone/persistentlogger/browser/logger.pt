<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="zopyx.plone.persistentlogger">
<body>

    <metal:slot fill-slot="style_slot">
        <link rel="stylesheet" type="text/css" tal:attributes="href string:$portal_url/++resource++zopyx.plone.persistentlogger/jsgrid/dist/jsgrid.min.css" />
        <link rel="stylesheet" type="text/css" tal:attributes="href string:$portal_url/++resource++zopyx.plone.persistentlogger/jsgrid/dist/jsgrid-theme.min.css" />
    </metal:slot>

    <metal:slot fill-slot="javascript_head_slot">
        <script type="text/javascript" charset="utf8" tal:attributes="src string:$portal_url/++resource++zopyx.plone.persistentlogger/jsgrid/dist/jsgrid.js"></script>
    </metal:slot>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

      <h2 i18n:translate="">Logging</h2>

      <div class="datatable"></div>

      <a tal:attributes="href string:${context/absolute_url}/@@persistent-log-clear" 
          i18n:translate="">Clear log entries</a>

      <script type="text/javascript" tal:content="string: URL = '${context/absolute_url}'"></script>
      <script type="text/javascript" 
              tal:content="string: PORTAL_URL = '$portal_url'"></script>

      <script type="text/javascript">

        DATA = null;

        function checkArray(my_arr) {
           for(var i=0;i<my_arr.length;i++){
               if(my_arr[i] === "")   
                  return false;
           }
           return true;
        }

        function load_data(filter) {
            
            if (DATA == null) {
                var url = URL + "/@@logger-entries";
                $.ajax({
                    url: url,
                    dataType: 'json',
                    async: false,
                    method: 'GET',
                    success: function(result) {
                        DATA = result;
                    } 
                });
            }

            var result = DATA;

            for (var prop in filter) {
                if (filter[prop].length > 0) {
                  var result = $.grep(result, function (item) {
                    var regexp = new RegExp(filter[prop], 'gi');
                    if (item[prop].match(regexp)) {
                      return item;
                    }
                  });
                  break;
                }
            }
            
            return result;
        }

        function date_renderer(value, row) {
            return row['date_str'];
        }

        function info_url_renderer(value, row) {
            var value = row['info_url'];
            if (! value) return;
            if (value.indexOf('http') == 0) 
                return '<a href="' + value + '">Info</a>';
            else
                return '<a href="' + PORTAL_URL + value + '">Info</a>';
            return null;
        }

        function comment_renderer(value, row) {
            var s = value;
            if (row['details']) {
                var details = row['details'];
                s += ' <span class="details"><a class="show-details">[Details]</a><pre class="details-data" style="display: none">' + details + '</pre></span>';                
            }
            return s;
        }

        $(document).ready(function() {

            $('body').on('click', '.show-details', function() {
                $(this).siblings('.details-data').toggle('fast');
            });

            $('.datatable').jsGrid({
                width: "90%",
                height: "600px",
                autoload: true,
                sorting: true,
                filtering: true,
                pageSize: 16,
                pageButtonCount: 5,
                controller: {
                    loadData: load_data
                },
                fields: [
                    { name: "date", title: "Date", type: "text", width: 30, css: 'field-date', itemTemplate: date_renderer, autosearch: true, filtering: true},
                    { name: "level", title: "Level", type: "text", width: 20, css: 'field-level', filtering: true, autosearch: true },
                    { name: "username", title: "Username", type: "text", width: 20, css: 'field-username', filtering: true, autosearch: true},
                    { name: "info_url", title: "Info", type: "text", width: 20, css: 'field-info-url', filtering: true, autosearch: true, itemTemplate: info_url_renderer},
                    { name: "comment", title: "Comment", type: "text", css: 'field-comment', filtering: true, itemTemplate: comment_renderer, autosearch: true},
                ]
            });
            $('.datatable').jsGrid('loadData');
            
        });
      </script>

  </metal:content-core>
</metal:main>

</body>
</html>

